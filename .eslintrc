{
  "extends": "airbnb/base",
  "ecmaFeatures": {
    "blockBindings": true,
    "forOf": true,
    "jsx": true
  },
  "env": {
    "node": true
  },
  "globals": {
    "before": false,
    "after": false,
    "beforeEach": false,
    "afterEach": false,
    "describe": false,
    "it": false
  },
  "parser": "babel-eslint",
  "rules": {
    "no-shadow": 0,
    "no-param-reassign": 0,
    "id-length": [2, {"exceptions": ["_", "i"]}],
    "comma-dangle": [1, "never"],
    "max-len": [2, 120, 2],
    "semi": [2, "never"],
    "no-console": "off",
    "consistent-return": "off",
    "func-names": "off",
    "no-unused-expressions": "off",
    "arrow-body-style": "off",
    "new-cap": "off"
  }
}
